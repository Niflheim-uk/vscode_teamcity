{
  "name": "teamcity",
  "displayName": "TeamCity",
  "description": "Allows you to browse projects, build configurations and trigger a new build from within VS code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "TeamCity",
      "properties": {
        "teamCity.credentials.accessToken": {
          "type": "string",
          "default": "",
          "markdownDescription": "A user access token is required to communicate with the server via the REST API. Create a token via your TeamCity server profile page."
        },
        "teamCity.server.URL": {
          "type": "string",
          "default": "",
          "markdownDescription": "The URL to the TeamCity server."
        }
      }
    },
    "commands": [
      {
        "command": "teamCity.configServerURL",
        "title": "Set the TeamCity server URL",
        "category": "TeamCity"
      },
      {
        "command": "teamCity.configAccessToken",
        "title": "Set the TeamCity access token",
        "category": "TeamCity"
      },
      {
        "command": "teamCity.configTeamCity",
        "title": "Configure the TeamCity addon",
        "category": "TeamCity"
      },
      {
        "command": "teamCity.runBuild",
        "title": "Run build",
        "icon": "$(play)",
        "category": "TeamCity"
      },
      {
        "command": "teamCity.viewBuild",
        "title": "View build",
        "icon": "$(eye)",
        "category": "TeamCity"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "teamCity.viewBuild",
          "when": "view == teamCity.server && viewItem == BuildConfig",
          "group": "inline"
        },
        {
          "command": "teamCity.runBuild",
          "when": "view == teamCity.server && viewItem == BuildConfig",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": { 
      "activitybar": [
        {
          "id": "teamCity",
          "title": "TeamCity Browser",
          "icon": "$(dashboard)"
        }
      ]
    },
    "views": {
      "teamCity": [
        {
          "id": "teamCity.server",
          "name": "TeamCity",
          "icon": "$(dashboard)",
          "contextualTitle": "TeamCity Browser"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view":"teamCity.server",
        "contents": "Please provide the server URL\n[Set Server URL](command:teamCity.configServerURL)",
        "when": "config.teamCity.server.URL ===''"
      },
      {
        "view":"teamCity.server",
        "contents": "Please create a personal access token via your TeamCity server profile.\n[Set Access Token](command:teamCity.configAccessToken)",
        "when": "config.teamCity.server.URL !=='' && config.teamCity.credentials.accessToken ===''" 
      },
      {
        "view":"teamCity.server",
        "contents": "No items found.\nPlease verify settings.\n[Team City Settings](command:teamCity.configTeamCity)",
        "when": "config.teamCity.server.URL !=='' && config.teamCity.credentials.accessToken !==''" 
      }
    ]
   },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "NODE_OPTIONS='--trace-deprecation' esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.21.1",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.6.8"
  }
}
